<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.org.platitudes.wipefiles"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="uk.org.platitudes.wipe.main.MainTabActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="uk.org.platitudes.wipe.preferences.SettingsActivity"
            android:label="Wipe File Settings" >
        </activity>
        <activity
            android:name="uk.org.platitudes.wipe.main.DeletionLogActivity"
            android:label="Delete log"
            >
        </activity>
    </application>

</manifest>
